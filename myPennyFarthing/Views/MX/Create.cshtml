@model MX

<fieldset class="border d-inline-block p-3 shadow">
    <legend> Add Maitenance </legend>

    <form method="post">
        <table>
            @if (ViewData.ModelState.ErrorCount > 0)
            {
                <thead>
                    <tr>
                        <td colspan="2">
                            <div asp-validation-summary="All" class="text-danger"> </div>
                        </td>
                    </tr>

                    <tr> <td class="pl-2 pr-2" colspan="2"> <hr /> </td> </tr>
                </thead>
            }

            <tbody>
                <tr>
                    <th class="pr-1 text-right"> Date: </th>
                    <td class="pl-1"> <input asp-for="Date" class="rounded" required /> </td>
                </tr>

                <tr>
                    <th class="pr-1 text-right"> Maintenance Action: </th>
                    <td class="pl-1"> <input asp-for="Action" class="rounded" required /> </td>
                </tr>

                <tr>
                    <th class="pr-1 text-right"> Mileage: </th>
                    <td class="pl-1"> <input asp-for="Mileage" class="rounded" required /> </td>
                </tr>

                <tr>
                    <th class="pr-1 text-right"> Cost: </th>
                    <td class="pl-1"> <input asp-for="Cost" class="rounded" required /> </td>
                </tr>
            </tbody>

            <tfoot>
                <tr> <td class="pl-2 pr-2" colspan="2"> <hr /> </td> </tr>

                <tr>
                    <td class="text-center" colspan="2">
                        <input class="btn btn-sm btn-success mr-1" type="submit" value="Add Mainteanance Action" />
                        <a asp-controller="MX" asp-action="Index" class="btn btn-sm btn-dark ml-1"> Cancel </a>
                    </td>
                </tr>
            </tfoot>
        </table>
    </form>
</fieldset>