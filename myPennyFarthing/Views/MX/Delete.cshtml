@model MX

<fieldset class="border d-inline-block p-3 shadow">
    <legend> Delete Maintenance </legend>

    <table>
        <tbody>
            <tr>
                <th class="pr-1 text-right"> Date: </th>
                <td class="pl-1"> @Model.Date </td>
            </tr>

            <tr>
                <th class="pr-1 text-right"> Maintenance Completed: </th>
                <td class="pl-1"> @Model.Action </td>
            </tr>

            <tr>
                <th class="pr-1 text-right"> Mileage: </th>
                <td class="pl-1"> @Model.Mileage </td>
            </tr>

            <tr>
                <th class="pr-1 text-right"> Cost: </th>
                <td class="pl-1"> @Model.Cost </td>
            </tr>
        </tbody>

        <tfoot>
            <tr>
                <td colspan="2">
                    <hr />
                </td>
            </tr>

            <tr>
                <td class="text-center" colspan="2">
                    <span class="text-center text-danger pl-2 pr-2"> Are you sure? </span>
                </td>
            </tr>

            <tr>
                <td colspan="2">
                    <hr />
                </td>
            </tr>

            <tr>
                <td class="text-center" colspan="2">
                    <form method="post">
                        <input type="hidden" asp-for="Id" />
                        <input type="submit" value="Delete Maintenance" class="btn btn-sm btn-danger mr-1" />
                        <a asp-controller="MX" asp-action="Details" asp-route-id="@Model.Id" class="btn btn-sm btn-dark ml-1"> Cancel </a>
                    </form>
                </td>
            </tr>
        </tfoot>
    </table>
</fieldset>