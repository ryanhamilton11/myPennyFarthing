@model UserChangePasswordViewModel


<div asp-validation-summary="All" class="text-danger"></div>

<h3 class="text-center">Change Password</h3>
<hr>
<div class="card text-center bg-light">
    <form method="post" class="card-body" id="bootstrapForm">
        <input asp-for="CurrentPassword" type="password" placeholder="Current Password" required />
        <br />
        <input asp-for="NewPassword" type="password" placeholder="New Password" required />
        <br />
        <input asp-for="VerifyNewPassword" type="password" placeholder="Verify New Password" required />
        <br />
        <button type="submit" class="btn btn-secondary">Change Password</button>
    </form>
</div>