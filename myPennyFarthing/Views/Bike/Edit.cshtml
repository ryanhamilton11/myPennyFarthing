@model Bike

<fieldset class="border d-inline-block p-3 shadow text-center">
    <legend> Edit Bike </legend>

    <form method="post">
        <table>
            @if (ViewData.ModelState.ErrorCount > 0)
            {
                <thead>
                    <tr>
                        <td colspan="2">
                            <div asp-validation-summary="All" class="text-danger"> </div>
                        </td>
                    </tr>

                    <tr> <td class="pl-2 pr-2" colspan="2"> <hr /> </td> </tr>
                </thead>
            }

            <tbody>
                <tr>
                    <th class="pr-1 text-right"> Year: </th>
                    <td class="pl-1"> <input asp-for="Year" class="rounded" min="1886" required /> </td>
                </tr>

                <tr>
                    <th class="pr-1 text-right"> Make: </th>
                    <td class="pl-1"> <input asp-for="Make" class="rounded" required /> </td>
                </tr>

                <tr>
                    <th class="pr-1 text-right"> Model: </th>
                    <td class="pl-1"> <input asp-for="Model" class="rounded" required /> </td>
                </tr>

                <tr>
                    <th class="pr-1 text-right"> Color: </th>
                    <td class="pl-1"> <input asp-for="Color" class="rounded" /> </td>
                </tr>
            </tbody>

            <tfoot>
                <tr> <td class="pl-2 pr-2" colspan="2"> <hr /> </td> </tr>

                <tr>
                    <td class="text-center" colspan="2">
                        <input class="btn btn-sm btn-success mr-1" type="submit" value="Save" />
                        <a asp-controller="Bike" asp-action="Details" asp-route-id="@Model.Id" class="btn btn-sm btn-light ml-1"> Cancel </a>
                    </td>
                </tr>
            </tfoot>
        </table>

    </form>
</fieldset>

